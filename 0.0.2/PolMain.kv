#: import Factory kivy.factory.Factory

# Меню Расчет укладки пола
<PolMain>:
    name: 'расчет полов'
    Screen:
        BoxLayout:
            orientation: 'vertical'
            size: root.width, root.height
            padding: 10
            spacing: 10
            canvas.before:
                Color:
                    rgba: .28,.33,.96,1
                Rectangle:
                    size: self.size

            GridLayout:
                spacing: 5
                cols: 1
                DefButton:
                    text: 'Кафель'
                    on_release:
                        Factory.Cafel().open()
                DefButton:
                    text: 'Ламинат'
                    on_release:
                        Factory.Laminat().open()
                DefButton:
                    text: 'Паркет'
                    on_release:
                        Factory.Parkent().open()
                DefButton:
                    text: ''
                # Кнопка возврата в главное меню
            DefButton:
                text: 'Назад'
                size_hint: 1, .1
                on_release:
                    app.root.current = 'main'
                    root.manager.transition.direction = 'right'

# Меню расчета Кафель
<Cafel>:
    name: 'Кафель'
    auto_dismiss: False
    title: 'Кафель'

    kvadrat_input: kvadrat_input
    shirina_cafel_input: shirina_cafel_input
    dlina_cafel_input: dlina_cafel_input
    kley_input: kley_input
    pr_gruntovka_input: pr_gruntovka_input
    workmans_input: workmans_input
    fuga_input: fuga_input
    answer_output: answer_output


    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgba: .28,.33,.96,1
            Rectangle:
                size: self.size

        GridLayout:
            spacing: 5
            cols: 2
            DefLabel:
                text: 'Квадратура:'
            DefTextInput:
                id: kvadrat_input
                text: 'Обезательно для ввода'
            DefLabel:
                text: 'Ширина кафеля:'
            DefTextInput:
                id: shirina_cafel_input
            DefLabel:
                text: 'Длинна кафеля:'
            DefTextInput:
                id: dlina_cafel_input
            DefLabel:
                text: 'Стоимость клея за кг:'
            DefTextInput:
                id: kley_input
            DefLabel:
                text: 'Стоимость грунтовки за литр:'
            DefTextInput:
                id: pr_gruntovka_input
            DefLabel:
                text: 'Стоимость фуги за кг:'
            DefTextInput:
                id: fuga_input
            DefLabel:
                text: 'Количество рабочих:'
            DefTextInput:
                id: workmans_input
        DefButton:
            size_hint: 1, .3
            text: 'Посчитать'
            on_press:
                root.calculate_cafel()
        GridLayout:
            size_hint: 1, .75
            cols: 2
            DefLabel:
                text: 'Стоимость работ:'
            Label:
                id: answer_output
            DefLabel:
                valign: 'middle'
                text_size: self.size
                text: 'Примерное время на выполнеие работ:'
            Label:
                valign: 'middle'
                text_size: self.size
                text: 'Выведется если графа "Количество рабочих" заполнено'
        DefButton:
            text: 'Назад'
            size_hint: 1, .2
            on_release:
                root.dismiss()

