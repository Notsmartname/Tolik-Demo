#: import Factory kivy.factory.Factory
BetonMain:


# Меню Расчет бетона
<BetonMain>:
    name: 'расчет бетона'
    Screen:
        BoxLayout:
            orientation: 'vertical'
            size: root.width, root.height
            padding: 10
            spacing: 10
            canvas.before:
                Color:
                    rgba: .28,.33,.96,1
                Rectangle:
                    size: self.size
            GridLayout:
                spacing: 5
                cols: 1
                DefButton:
                    text: 'Фундамент'
                    on_release:
                        Factory.OneBeton().open()
                DefButton:
                    text: 'Колонна'
                DefButton:
                    text: 'Плита'
                DefButton:
                    text: ''
                # Кнопка возврата в главное меню
            DefButton:
                text: 'Назад'
                size_hint: 1, .1
                on_release:
                    app.root.current = 'main'
                    root.manager.transition.direction = 'right'
<OneBeton@Popup>:
    name: 'Ленточный фундамент'

    BoxLayout:
        cols: 2
        orientation: 'vertical'
        size: root.width, root.height
        padding: 10
        spacing: 10


        Button:
            background_normal: 'Two.png'

        DefButton:
            text: 'Назад'
            on_release:
                root.dismiss()