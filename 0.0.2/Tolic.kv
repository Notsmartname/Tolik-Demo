#: import Factory kivy.factory.Factory
#: include OtdelkaMain.kv
#: include BetonMain.kv
#: include KladkaMain.kv
#: include PolMain.kv
WindowManager:
    GlobalMain:
    OtdelkaMain:
    BetonMain:
    KladkaMain:
    PolMain:


# Кномка в меню
<DefButton@Button>:
    background_color: .19, .31, .40, 1
    color: .82, .94, .26, 1
# Надпись для ввода данных
<DefLabel@Label>:
    size_hint: 1, .4
    #height: '100dp'
# Строка для ввода данных
<DefTextInput@TextInput>:
    size_hint: 1, .4
    #height: '100dp'
    multiline: False
    # text: 'Введите если необходимо'
    input_type: 'number'
    input_filter: 'int'
    # on_focus: self.text = ''



# Главное меню
<GlobalMain>:
    name: 'main'
    Screen:
        canvas.before:
            Color:
                rgba: .28,.33,.96,1
            Rectangle:
                size: self.size


        BoxLayout:
            # cols: 1
            orientation: 'vertical'
            size: root.width, root.height
            Label:
                color: .82, .94, .26, 1
                size_hint: 1, .2
                text: 'Главное меню'


            BoxLayout:
                orientation: 'vertical'
                padding: '15dp'
                spacing: '15dp'
                DefButton:
                    text: 'Расчет отделки стен'
                    # background_color: .19, .31, .9, 1
                    # color: .82, .94, .26, 1
                    pos_hint_y: {'center_x': 0.5}
                    on_release:
                        app.root.current = 'расчет отделки'
                        root.manager.transition.direction = 'left'
                Button:
                    text: 'Расчет бетона(не готов)'
                    background_color: .19, .31, .40, 1
                    color: .82, .94, .26, 1
                    on_release:
                        app.root.current = 'расчет бетона'
                        root.manager.transition.direction = 'left'
                Button:
                    text: 'Расчет кладки'
                    background_color: .19, .31, .40, 1
                    color: .82, .94, .26, 1
                    on_release:
                        app.root.current = 'расчет кладки'
                        root.manager.transition.direction = 'left'
                Button:
                    text: 'Расчет полов'
                    background_color: .19, .31, .40, 1
                    color: .82, .94, .26, 1
                    on_release:
                        app.root.current = 'расчет полов'
                        root.manager.transition.direction = 'left'