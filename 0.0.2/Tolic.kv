WindowManager:
    GlobalMain:
    OtdelkaMain:
    OtdelkaFirst:
    BetonMain:
    KladkaMain:
    PolMain:
    OtdelkaSecend:



# Кномка в меню
<DefButton@Button>:
    background_color: .19, .31, .40, 1
    color: .82, .94, .26, 1
# Надпись для ввода данных
<DefLabel@Label>:
    size_hint: 1, .4
    #height: '100dp'
# Строка для ввода данных
<DefTextInput@TextInput>:
    size_hint: 1, .4
    #height: '100dp'
    multiline: False
    text: 'Введите если необходимо'
    input_type: 'number'
    input_filter: 'int'
    on_focus: self.text = ''



# Главное меню
<GlobalMain>:
    name: 'main'
    Screen:
        canvas.before:
            Color:
                rgba: .28,.33,.96,1
            Rectangle:
                size: self.size


        BoxLayout:
            # cols: 1
            orientation: 'vertical'
            size: root.width, root.height
            Label:
                color: .82, .94, .26, 1
                size_hint: 1, .2
                text: 'Главное меню'


            BoxLayout:
                orientation: 'vertical'
                padding: '15dp'
                spacing: '15dp'
                DefButton:
                    text: 'Расчет отделки стен'
                    # background_color: .19, .31, .9, 1
                    # color: .82, .94, .26, 1
                    pos_hint_y: {'center_x': 0.5}
                    on_release:
                        app.root.current = 'расчет отделки'
                        root.manager.transition.direction = 'left'
                Button:
                    text: 'Расчет бетона'
                    background_color: .19, .31, .40, 1
                    color: .82, .94, .26, 1
                    on_release:
                        app.root.current = 'расчет бетона'
                        root.manager.transition.direction = 'left'
                Button:
                    text: 'Расчет кладки'
                    background_color: .19, .31, .40, 1
                    color: .82, .94, .26, 1
                    on_release:
                        app.root.current = 'расчет кладки'
                        root.manager.transition.direction = 'left'
                Button:
                    text: 'Расчет полов'
                    background_color: .19, .31, .40, 1
                    color: .82, .94, .26, 1
                    on_release:
                        app.root.current = 'расчет полов'
                        root.manager.transition.direction = 'left'

# Расчет отделки помещений
<OtdelkaMain>:
    name: 'расчет отделки'


    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgba: .28,.33,.96,1
            Rectangle:
                size: self.size
        GridLayout:
            spacing: 5
            cols: 1
            DefButton:
                text: 'Покраска стен'
                on_release:
                    app.root.current = 'Покраска стен'
                    root.manager.transition.direction = 'left'
            DefButton:
                text: 'Обои'
                on_release:
                    app.root.current = 'Обои'
                    root.manager.transition.direction = 'left'
            DefButton:
                text: 'Облицофка стен'
            DefButton:
                text: ''
        # Кнопка возврата в главное меню
        DefButton:
            text: 'Назад'
            size_hint: 1, .1
            on_release:
                app.root.current = 'main'
                root.manager.transition.direction = 'right'

