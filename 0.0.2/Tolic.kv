# Покраска стен
<OtdelkaFirst@Screen>:
    name: 'Покраска стен'
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 10
        spacing: 10
        canvas.before:
            Color:
                rgba: .28,.33,.96,1
            Rectangle:
                size: self.size

        GridLayout:
            spacing: 5
            cols: 2
            DefLabel:
                text: 'Квадратура:'
            DefTextInput:
                id: kvadrat_input
                text: 'Обезательно для ввода'
            DefLabel:
                text: 'Стоимость шпаклевки за кг:'
            DefTextInput:
                id: kvadrat_input
            DefLabel:
                text: 'Стоимость краски за литр:'
            DefTextInput:
                id: kvadrat_input
            DefLabel:
                text: 'Стоимость грунтовки за литр:'
            DefTextInput:
                id: kvadrat_input
            DefLabel:
                text: 'Стоимость шкурки за метр:'
            DefTextInput:
                id: kvadrat_input
            DefLabel:
                text: 'Количество рабочих:'
            DefTextInput:
                id: kvadrat_input
        DefButton:
            size_hint: 1, .3
            text: 'Посчитать'
        GridLayout:
            cols: 2
            DefLabel:
                text: 'Стоимость работ:'
            Label:
                text: ''
            DefLabel:
                valign: 'middle'
                text_size: self.size
                text: 'Примерное время на выполнеие работ:'
            Label:
                valign: 'middle'
                text_size: self.size
                text: 'Выведется если графа "Количество рабочих" заполнено'
        DefButton:
            text: 'Назад'
            size_hint: 1, .2
            on_release:
                app.root.current = 'расчет отделки'
                root.manager.transition.direction = 'right'

