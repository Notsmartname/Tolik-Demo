    MDBottomAppBar:

        MDToolbar:
            icon: 'arrow-up-circle'
            type: 'bottom'
            mode: 'center'
            on_action_button: app.show_example_custom_bottom_sheet()





<ItemForCustomBottomSheet@OneLineIconListItem>
    on_press: app.custom_sheet.dismiss()
    icon: ""

    IconLeftWidget:
        icon: root.icon

<ContentCustomSheet@BoxLayout>:
    orientation: "vertical"
    size_hint_y: None
    height: "400dp"

    MDToolbar:
        title: 'Custom bottom sheet:'
#        elevation: 10

    ScrollView:

        MDGridLayout:
            cols: 1
#            adaptive_height: True

            ItemForCustomBottomSheet:
                icon: "page-previous"
                #text: "Preview"

            ItemForCustomBottomSheet:
                icon: "exit-to-app"
                #text: "Exit"