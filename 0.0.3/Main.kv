<GlobalMain>:
    name: 'main'
    # Шапка меню
    MDToolbar:
        title: 'Главное меню'
        pos_hint: {"top": 1}
        elevation: 10
        theme_text_color: "Custom"
        text_color: .82, .94, .26, 1

    MDBoxLayout:
        orientation: 'vertical'
        pos: '1dp', '200dp'
        spacing: 10

        MDFillRoundFlatButton:
            text: '      Расчет отделки стен      '
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            theme_text_color: "Custom"
            text_color: .82, .94, .26, 1
            font_size: '20sp'
            on_release:
                app.root.current = 'расчет отделки'
                root.manager.transition.direction = 'left'

        MDFillRoundFlatButton:
            text: '             Расчет бетона            '
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}
            theme_text_color: "Custom"
            text_color: .82, .94, .26, 1
            font_size: '20sp'
            on_release:
                app.root.current = 'расчет бетона'
                root.manager.transition.direction = 'left'

        MDFillRoundFlatButton:
            text: '             Расчет кладки            '
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            theme_text_color: "Custom"
            text_color: .82, .94, .26, 1
            font_size: '20sp'
            on_release:
                app.root.current = 'расчет кладки'
                root.manager.transition.direction = 'left'
        MDFillRoundFlatButton:
            text: '              Расчет полов             '
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            theme_text_color: "Custom"
            text_color: .82, .94, .26, 1
            font_size: '20sp'
            on_release:
                app.root.current = 'расчет полов'
                root.manager.transition.direction = 'left'

