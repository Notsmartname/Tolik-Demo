# Меню Расчет укладки пола
<PolMain>:
    name: 'расчет полов'

    BoxLayout:
        pos_hint: {'center_x': 0.5, 'center_y': 0.9}
        orientation: 'vertical'
        spacing: 10
        BoxLayout:

            orientation: 'vertical'
            spacing: 10
            MDFillRoundFlatButton:
                pos_hint: {'center_x': 0.5, 'center_y': 0.9}
