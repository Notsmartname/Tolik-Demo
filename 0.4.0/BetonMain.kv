# Меню Расчет бетона
<BetonMain>:
    ScrollView:

        MDList:

            TwoLineAvatarListItem:
                text: 'Ленточный фундамен'
                secondary_text: "Тип-1"
                text_color: app.text_color_button
                on_press:
                    Factory.OneBeton().open()

                ImageLeftWidget:
                    size_hint: (None, None)
                    size: (dp(55), dp(30))
                    radius: [dp(10)]
                    source: '1.jpeg'

            TwoLineAvatarListItem:
                text: 'Ленточный фундамен'
                secondary_text: "Тип-2"
                text_color: app.text_color_button
                on_press:
                    Factory.TwoBeton().open()

                ImageLeftWidget:
                    size_hint: (None, None)
                    size: (dp(55), dp(30))
                    radius: [dp(10)]
                    source: '2.jpeg'

            TwoLineAvatarListItem:
                text: 'Ленточный фундамен'
                secondary_text: "Тип-3"
                text_color: app.text_color_button
                on_press:
                    Factory.TreeBeton().open()

                ImageLeftWidget:
                    size_hint: (None, None)
                    size: (dp(55), dp(30))
                    radius: [dp(10)]
                    source: '3.jpeg'

            TwoLineAvatarListItem:
                text: 'Ленточный фундамен'
                secondary_text: "Тип-4"
                text_color: app.text_color_button
                on_press:
                    Factory.FourBeton().open()

                ImageLeftWidget:
                    size_hint: (None, None)
                    size: (dp(55), dp(30))
                    radius: [dp(10)]
                    source: '4.jpeg'


<OneBeton>:
    name: 'Ленточный фундамент'
    title: 'Ленточный фундамент'

    pr_cub_input: pr_cub_input
    a_input: a_input
    b_input: b_input
    c_input: c_input
    h_input: h_input
    answer_beton: answer_beton
    answer_pr_beton: answer_pr_beton

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        BoxLayout:
            height: '800sp'
            orientation: 'vertical'
            size_hint_y: None
            # size: root.width, root.height
            padding: 10
            spacing: 10

            canvas:
                Color:
                    rgba: app.popup_color
                Rectangle:
                    size: self.size
                    pos: self.pos

            FitImage:
                source: 'OneBig.jpeg'
                size_hint: (None, None)
                size: (dp(480), dp(240))
                radius: [dp(10),]


            DefTextInput:
                id: pr_cub_input
                hint_text: 'Стоимость за 1 куб бетона:'
                text_color: app.text_color_label

            DefTextInput:
                id: a_input
                hint_text: 'Размер A'
                theme_text_color: 'Custom'
                # helper_text: "Не обезательно для ввода"
                text_color: app.color_text_a
                line_color_focus: app.color_text_a

            DefTextInput:
                id: b_input
                hint_text: 'Размер B'
                # helper_text: "Не обезательно для ввода"
                text_color: app.color_text_b
                line_color_focus: app.color_text_b

            DefTextInput:
                id: c_input
                hint_text: 'Размер С'
                # helper_text: "Не обезательно для ввода"
                text_color: app.color_text_c
                line_color_focus: app.color_text_c

            DefTextInput:
                id: h_input
                hint_text: 'Высота фундамента'
                # helper_text: "Не обезательно для ввода"
                text_color: app.text_color_button


            MDRoundFlatButton:
                # size_hint: 1, .1
                theme_text_color: 'Custom'
                text_color: app.text_color_button
                line_color: app.text_color_button
                pos_hint: {'center_x': .5, 'center_y': 1}
                text: '    Посчитать    '
                on_press:
                    root.calculate_kraska()

            MDTextField:
                id: answer_beton
                hint_text: 'Количество бетона в кубах:'
                text_color: app.text_color_label
                disabled: True
            MDTextField:
                id: answer_pr_beton
                hint_text: 'Общая стоимость бетона:'
                text_color: app.text_color_label
                disabled: True

            MDRoundFlatButton:
                text: 'Назад'
                # size_hint: 1, .1
                line_color: 0, 0, 0, 1
                theme_text_color: 'Custom'
                text_color: app.text_color_button
                line_color: app.text_color_button
                pos_hint: {'center_x': .5, 'center_y': 1}
                on_press:
                    root.dismiss()
#                    app.root.current = 'расчет отделки'
#                    root.manager.transition.direction = 'right'


